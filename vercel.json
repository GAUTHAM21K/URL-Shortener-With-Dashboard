{
  "version": 2,
  "builds": [
    {
      "src": "backend/core/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/node",
      "config": {
        "zeroConfig": true
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/core/wsgi.py" },
    { "src": "/admin/(.*)", "dest": "backend/core/wsgi.py" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "env": {
    "DEBUG": "False",
    "PYTHONUNBUFFERED": "1"
  },
  "buildCommand": "pip install -r backend/requirements.txt && cd backend && python manage.py migrate && python manage.py collectstatic --noinput && cd ../frontend && npm i && npm run build"
}