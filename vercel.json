{
  "version": 2,
  "buildCommand": "python build.py",
  "builds": [
    {
      "src": "backend/core/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "backend/core/wsgi.py" }
  ],
  "env": {
    "DEBUG": "False",
    "PYTHONUNBUFFERED": "1",
    "PYTHONPATH": "backend"
  }
}