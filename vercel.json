{
  "version": 2,
  "builds": [
    {
      "src": "backend/core/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    },
    {
      "src": "frontend",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/core/wsgi.py" },
    { "src": "/admin/(.*)", "dest": "backend/core/wsgi.py" },
    { "src": "/(.*)", "dest": "/index.html", "status": 200 }
  ],
  "env": {
    "DEBUG": "False",
    "PYTHONUNBUFFERED": "1"
  }
}